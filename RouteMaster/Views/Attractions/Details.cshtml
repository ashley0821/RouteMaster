@model RouteMaster.Models.ViewModels.AttractionDetailVM

@{
    ViewBag.Title = "Details";
}

<h2>景點詳情</h2>

<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            類別
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category)
        </dd>

        <dt>
            縣市
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Region)
        </dd>

        <dt>
            鄉鎮市區
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Town)
        </dd>

        <dt>
            名稱
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            地址
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            經度
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PositionX)
        </dd>

        <dt>
            緯度
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PositionY)
        </dd>

        <dt>
            描述
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            網站
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Website)
        </dd>




        <dt>
            平均分數
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AverageScoreText)
        </dd>

        <dt>
            平均停留時數
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AverageStayHoursText)
        </dd>

        <dt>
            平均花費
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AveragePriceText)
        </dd>

        <dt>
            圖片
        </dt>

        @foreach (string image in Model.Images)
        {
            <dd>
                <img src="@Url.Content("~/Uploads/" + image)" class="w-50" />
            </dd>
        }

    </dl>
</div>
<p>
    @Html.ActionLink("編輯景點", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("返回景點列表", "Index",null, new { @class = "btn btn-secondary" })
</p>
